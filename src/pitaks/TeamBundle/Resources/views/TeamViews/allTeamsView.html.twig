{% extends "::base.html.twig" %}

{% block title %}pitaksKickerBundle:Reservation:index{% endblock %}

{% block body %}
    <h3> Teams </h3>

    <table class="table table-hover">
        <tr>
            <th>Team Name</th>
            <th>Created Data</th>
            <th> Users</th>
            <th> Stat </th>
            <th> Actions </th>
        </tr>
        {% for team in teamAndFriend %}
            <tr>
                <td> {{ team['team'].name }}</td>
                <td> {{ team['team'].registeredDate|date('Y-m-d  h:m:sa') }}</td>

                <td> <a class="btn btn-default" href="{{ path('userStat', {'username': team['friend'].username}) }}">{{ team['friend'].username}} </a>  </td>
                <td>not available yet</td>
                <td> <a class="btn btn-warning" href="{{ path('deleteTeam',{'teamId':team['team'].id}) }}">reject</a> </td>
            </tr>
        {% endfor %}
    </table>
{% endblock %}